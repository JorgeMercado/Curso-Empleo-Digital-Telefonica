<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Actividad_4_4</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>Index</welcome-file>
	</welcome-file-list>
	<resource-ref>
		<description>DB Connection Actividad 4.2</description>
		<res-ref-name>jdbc/Actividad_4_2_DB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<listener>
		<display-name>atributoSesionListener</display-name>
		<listener-class>modelos.Usuario</listener-class>
	</listener>
	<listener>
		<display-name>sessionListener</display-name>
		<listener-class>listeners.ListenerDeSesion</listener-class>
	</listener>
	<filter>
		<filter-name>FiltroContador</filter-name>
		<filter-class>filtros.FiltroContador</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FiltroContador</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<display-name>ListenerDeContexto</display-name>
		<listener-class>listeners.ListenerDeContexto</listener-class>
	</listener>
</web-app>